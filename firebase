// Initialize Firebase app
firebase.initializeApp(firebaseConfig);
// Get Firestore reference
const db = firebase.firestore();

// Example data object from form inputs
const formData = {
  fullName: "John Doe",
  email: "john@example.com",
  phone: "+1234567890",
  address: "123 Main St",
  motorcycleModel: "Yamaha YZF-R3",
  submittedAt: new Date().toISOString()
};
// Add data to Firestore collection "motorcycleApplications"
db.collection('motorcycleApplications')
  .add(formData)
  .then(() => {
    console.log("Application successfully submitted!");
  })
  .catch((error) => {
    console.error("Error adding document: ", error);
  });
